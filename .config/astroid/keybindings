# ~/.config/astroid/keybindings

# astroid custom keybindings file

# - see https://github.com/astroidmail/astroid/wiki/Customizing-key-bindings
# - adapted from default keybindings (which can be obtained using
#   devel/get_keys.py from repo) -- the default keybindings may be
#   found in a file named 'keybindings-default' in the same directory
#   as this file

# toggle tag: 'delete'
thread_index.run(hooks::toggle delete %1)=x
thread_view.run(hooks::toggle delete %1)=x

# search make more vim-like
main_window.search=/ # Search, default: o

# unbind Tab and Shift-Tab so they are passed to webkit as
# "jump to next|previous html element"
thread_view.next_unread= # Focus the next unread message, default: Key (GDK_KEY_Tab)
thread_view.previous_unread= # Focus the previous unread message, default: Key (false, false, (guint) GDK_KEY_ISO_Left_Tab)

# swap bindings for colon and semicolon in thread view
# - thread_view.multi and thread_view.multi_next_thread
thread_view.multi=: # Apply action to marked messages, default: Key (GDK_KEY_semicolon)
thread_view.multi_next_thread=; # Open next after.., default: Key (":")

# change to colon since changed same action to colon in thread view
thread_index.multi=: # Apply action to marked threads, default: Key (GDK_KEY_semicolon)

